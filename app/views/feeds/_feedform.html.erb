
<%= form_with(model: @feed,local: true, url: new_or_edit ) do |form| %>
<div class = "row">
<div class="offset-md-4 col-md-8">
<div>
<%= form.label :title %>
<%= form.text_field :title %>
</div>
<div>
<%= image_tag(@feed.picture.url) if @feed.picture && @feed.picture.url %>
<%= form.label :picture %>
<%= form.file_field :picture %>
<%= form.hidden_field :picture_cache %>
</div>
<div>
<%= form.label :content %>
<%= form.text_field :content %>
</div>
<%= form.submit "投稿"%>
</div>
</div>
<% end %>
